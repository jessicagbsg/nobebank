<h1>nobeBank</h1>
<h2>Entre na sua conta</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-field">
    <%= f.label :email, class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-input" %>
  </div>

  <div class="field form-field">
    <%= f.label :password, class:"form-label"%><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-field">
      <%= f.check_box :remember_me, class:"form-check-box" %>
      <%= f.label :remember_me, class:"form-label"%>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "entrar", class:"button-main" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
